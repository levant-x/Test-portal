@model Portal.Models.FormVM
@{
  var formStyles = new 
  { 
    @@class = "card p-5 border-2 border-primary", 
    id = Model.FormID
  };
  var altActionLines = Model.AltActionText.Split("\n");
}

@using(Html.BeginForm(Model.ActionName, Model.ControllerName, FormMethod.Post, formStyles))
{
  <h2 class="mb-3 text-center text-secondary">@Model.Header</h2>

  @await Html.PartialAsync(Model.FieldsViewName, Model.Item)

  <p class="d-flex justify-content-between mb-0">
    <button type="submit" class="btn btn-primary">
      @Model.SubmitText
    </button>
    
    <a href="#" id="@Model.AltControlID">
      <small class="text-end d-flex text-muted text-decoration-none">
        @for (int i = 0; i < altActionLines.Length; i++)
        {
          @altActionLines[i];
          if (i != altActionLines.Length - 1) { <br /> }
        }
      </small>
    </a>
  </p>
}